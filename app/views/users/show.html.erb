<div>
  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill,100,100 ,fallback: "no_image.jpg" %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>
<% @tweets.each do |tweet| %>
<div>
  <%= attachment_image_tag tweet, :image %>
  <p>投稿ユーザーアイコン：<%= attachment_image_tag @user, :profile_image, :fill,100,100 ,fallback: "no_image.jpg" %></p>
  <p>ユーザーネーム：<%= tweet.user.name %></p>
  <p>ツイート：<%= tweet.tweet_text%></p>
</div>
<% end %>