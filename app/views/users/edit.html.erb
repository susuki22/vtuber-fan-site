<div class='container'>
  <div class='row'>
    <div class="col-lg-5 mt-5 px-sm-0 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">名前</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
        <div class="mt-4 mx-auto">
          <%= attachment_image_tag @user, :profile_image, :fill, 280, 280, fallback: "no_image.jpg", class: "rounded-circle" %>
        </div>
        <label for="inputImage">アイコン画像</label>
        <div class="mt-4">
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
    </div>
  </div>
</div>