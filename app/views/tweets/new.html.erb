<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>ツイート投稿フォーム</h1>
      <%= form_with model: @tweet, local:true do |f| %>
        <h4>ツイート文</h4>
        <%= f.text_area :tweet_text %>
        <h4>投稿画像</h4>
        <%= f.attachment_field :image %>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>
